rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role - works for both projects
    function isAdmin(projectId) {
      return get(/databases/$(database)/documents/artifacts/$(projectId)/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Legacy helper function for backward compatibility
    function isAdminLegacy() {
      return get(/databases/$(database)/documents/artifacts/tolman-app/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Generic rule for any project (tolman-app or tolmantest)
    match /artifacts/{projectId}/public/data/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin(projectId);
    }
    
    match /artifacts/{projectId}/config/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin(projectId);
    }

    // User-specific private data (profiles)
    match /artifacts/{projectId}/users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin(projectId);
    }
    
    // All authenticated users can read the list of users for selection dropdowns, etc.
    match /artifacts/{projectId}/users/{document=**} {
        allow list: if request.auth != null;
    }

    // Bids and Projects data
    match /artifacts/{projectId}/projects/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Roles data
    match /artifacts/{projectId}/roles/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin(projectId);
    }

    // Explicit rules for production (tolman-app) as fallback
    match /artifacts/tolman-app/public/data/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdminLegacy();
    }
    
    match /artifacts/tolman-app/config/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdminLegacy();
    }

    match /artifacts/tolman-app/users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdminLegacy();
    }
    
    match /artifacts/tolman-app/users/{document=**} {
        allow list: if request.auth != null;
    }

    match /artifacts/tolman-app/projects/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /artifacts/tolman-app/roles/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdminLegacy();
    }

    // Explicit rules for staging (tolmantest) as fallback
    match /artifacts/tolmantest/public/data/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin('tolmantest');
    }
    
    match /artifacts/tolmantest/config/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin('tolmantest');
    }

    match /artifacts/tolmantest/users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin('tolmantest');
    }
    
    match /artifacts/tolmantest/users/{document=**} {
        allow list: if request.auth != null;
    }

    match /artifacts/tolmantest/projects/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /artifacts/tolmantest/roles/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin('tolmantest');
    }
  }
}