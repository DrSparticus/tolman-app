rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/artifacts/tolman-app/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Public data like materials and configuration
    match /artifacts/tolman-app/public/data/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /artifacts/tolman-app/config/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // User-specific private data (profiles)
    match /artifacts/tolman-app/users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // All authenticated users can read the list of users for selection dropdowns, etc.
    match /artifacts/tolman-app/users/{document=**} {
        allow list: if request.auth != null;
    }

    // Bids and Projects data
    match /artifacts/tolman-app/projects/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}